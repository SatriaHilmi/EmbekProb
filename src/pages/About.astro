---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/footer.astro";
import deadpool from "../assets/deadpoll.jpg";
import MainCard2 from "../components/MainCard2.astro";
import { Slider } from "../components/Slider";
import { Testimonial } from "../components/Testimonial";
import people2 from "../assets/farm-3.jpg";
const title = "About Page";
---

<Layout title={title}>
    <Navbar />
    <div class="max-w-6xl mx-auto pt-8 px-2 relative">
        <img
            src={people2.src}
            class="rounded-2xl shadow-2xl w-full relative z-10 h-[600px] object-cover"
        />

        <!-- teks di atas gambar -->
        <div
            class="absolute bottom-4 text-center
               md:bottom-4 md:left-4 md:translate-x-0 md:text-left z-20"
        >
            <div class="flex flex-col">
                <h2
                    class="text-white text-3xl font-bold px-4 py-2 rounded-lg font-bebas"
                >
                    Deadpool is Here ðŸŽ¬
                </h2>
                <h3
                    class="text-white text-2xl font-semibold px-4 font-bebas text-start"
                >
                    Meet our-team
                </h3>
            </div>
        </div>

        <!-- card -->
        <div
            class="absolute left-1/3 -translate-x-1/2
               w-2/4 md:w-1/2
               rounded-xl bg-amber-300 shadow-xl z-0 -my-3"
        >
            <h2 class="p-4 text-center text-md font-bold">
                Your Health, Our Commitment Freshness Delivered Daily
            </h2>
        </div>
    </div>
    <div class="max-w-7xl mx-auto mt-50 md:mt-40 relative">
        <MainCard2 />
    </div>
    <Slider client:load />
    <Testimonial client:load />
    <Footer />
</Layout>
