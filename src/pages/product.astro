---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/footer.astro";
import deadpool from "../assets/deadpoll.jpg";
import textile from "../assets/textile.jpg";
import embek from "../assets/embek.jpg";
import susu from "../assets/MilkCold.jpg";
import susu2 from "../assets/Milk-2.jpg";
import { PhoneCall } from "lucide-react";
const title = "Product Page";
---

<Layout title={title}>
    <Navbar />
    <div class="relative">
        <div
            class="absolute -top-5 inset-0 bg-cover bg-center pt-20 opacity-70 z-0"
            style={`background-image: url(${embek.src})`}
        >
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-white"></div>
        <div class="relative z-10 max-w-6xl mx-auto px-5 py-5">
            <h1 class="text-4xl font-bold text-green-800 font-bebas">
                Our Product
            </h1>
            <p
                class="mt-4 text-lg text-gray-700 p-4 rounded-lg"
                style={`background-image: url(${textile.src}); background-size:cover; background-position:center;`}
            >
                Explore our diverse range of fresh and organic products,
                carefully cultivated to bring the best of nature to your table.
                From farm-fresh vegetables to wholesome grains, each item is a
                testament to our commitment to quality and sustainability.
                Whether you're looking for everyday essentials or specialty
                items, our product selection is designed to meet your needs
                while supporting a healthier lifestyle.
            </p>
        </div>
    </div>
    <div class="max-w-6xl mx-auto md:mt-10 mb-5 relative">
        <h2 class="text-3xl font-bold text-green-800 font-bebas px-5 mb-6">
            Featured Products
        </h2>
        <div class="grid grid-cols-1 px-3">
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                <img
                    src={susu2.src}
                    alt="Product 1"
                    class="w-full h-68 object-cover rounded-t-[8px] object-[center_65%]"
                />
                <div class="flex flex-col justify-center items-center p-4">
                    <h3 class="text-lg font-semibold text-green-800">
                        Fresh Organic Milk
                    </h3>
                    <p class="mt-2 text-gray-600">
                        Fresh milk sourced from grass-fed cows, rich in
                        nutrients and flavor.
                    </p>
                </div>
            </div>
        </div>
        <div
            class="bg-[linear-gradient(120deg,_red_50%,_blue_50%)] shadow-lg flex justify-center mt-10 text-white font-bold p-4 rounded-lg font-bebas text-4xl mx-3"
        >
            HOT & COLD
        </div>
        <div
            class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-2 gap-5 mt-5 pb-10 mx-3"
        >
            <div
                class="bg-white rounded-lg shadow-md overflow-hidden transition duration-300 hover:scale-102"
            >
                <img
                    src={susu.src}
                    alt=""
                    class="h-65 object-cover rounded-t-[8px] w-full"
                />
                <div class="flex flex-col p-4">
                    <p class="font-semibold text-gray-500">
                        Hot Original Milk.
                    </p>
                    <p class="font font-semibold text-green-800">
                        Rp. 15.000 / Liter
                    </p>
                </div>
            </div>
            <div
                class="bg-white rounded-lg shadow-md overflow-hidden transition duration-300 hover:scale-102"
            >
                <img
                    src={susu.src}
                    alt=""
                    class="h-65 object-cover rounded-t-[8px] w-full"
                />
                <div class="flex flex-col p-4">
                    <p class="font-semibold text-gray-500">
                        Cold Original Milk.
                    </p>
                    <p class="font font-semibold text-green-800">
                        Rp. 15.000 / Liter
                    </p>
                </div>
            </div>
        </div>
        <div
            class="flex items-center gap-4 cursor-pointer group -mt-5 w-fit rounded-xl mx-2"
        >
            <!-- Lingkaran Ikon -->
            <a
                href="https://wa.me/6281336111123?text=Halo%20saya%20ingin%20memesan%20produk%20dari%20Embek%20Probolinggo%20Farm"
                class="w-15 h-15 flex justify-center items-center rounded-full bg-green-500 transition duration-300 group-hover:scale-105"
            >
                <PhoneCall className="w-10 h-10 text-white" />
            </a>

            <p
                class="text-2xl font-bold font-bebas text-black/60 group-hover:scale-105 transition duration-300"
            >
                CALL TO ORDER
            </p>
        </div>
    </div>
    <Footer />
</Layout>
