---
import { Hamburger } from "./Hamburger";
import { Contact } from "lucide-react";
---

<div class="sticky top-0 z-50">
    <!-- Navbar -->
    <div
        class="flex justify-end items-center space-x-4 px-4 text-sm bg-white h-8 font-bebas"
    >
        <a
            href="#contact"
            class="flex text-gray-600 font-semibold hover:text-green-900 text-2xl gap-1 mt-2"
        >
            CONTACT US
            <Contact className="w-[25px] h-[25px]" />
        </a>
    </div>
    <div
        class="mx-auto flex bg-white w-full justify-between items-center px-4 h-10 font-bebas"
    >
        <div class="flex items-center gap-2">
            <a href="/" class="text-xl font-bold text-green-700">logo</a>
            <!-- Jika untuk gambar -->
            <!-- <img src={astro.src} alt="Logo" class="h-10 w-14" /> -->
            <!-- Jika untuk icon -->
            <!-- <img src="/favicon.svg" alt="Logo" class="h-10 w-14" /> -->
            <span class="font-bold text-xl">Embek Probolinggo Farm</span>
        </div>

        <nav class="hidden md:flex gap-6">
            <a
                href="/About"
                class="text-gray-600 hover:text-green-900 font-semibold text-lg"
                >ABOUT</a
            ><span>|</span>
            <a
                href="#services"
                class="text-gray-600 hover:text-green-900 font-semibold text-lg"
                >PRODUCT</a
            ><span>|</span>
            <a
                href="#breeding"
                class="text-gray-600 hover:text-green-900 font-semibold text-lg"
                >breeding</a
            ><span>|</span>
            <a
                href="#meat"
                class="text-gray-600 hover:text-green-900 font-semibold text-lg"
                >meat</a
            >
        </nav>

        <!-- Hamburger Button from React To Mobile -->
        <Hamburger targetId="mobileMenu" client:load />
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobileMenu"
        class="md:hidden max-h-0 overflow-hidden transition-all duration-500 ease-in-out bg-white px-4 space-y-2 font-bebas"
    >
        <a href="/About" class="block py-2 hover:text-green-700 font-semibold"
            >ABOUT</a
        >
        <a
            href="#services"
            class="block py-2 hover:text-green-700 font-semibold">PRODUCT</a
        >
        <a
            href="#breeding"
            class="block py-2 hover:text-green-700 font-semibold">breeding</a
        >
        <a href="#meat" class="block py-2 hover:text-green-700 font-semibold"
            >Meat</a
        >
    </div>
</div>
