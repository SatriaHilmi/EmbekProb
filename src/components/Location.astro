---
// src/pages/index.astro
import textile from "../assets/textile.jpg";
---

<section class="grid grid-cols-1 md:grid-cols-2 gap-5 px-5 mb-10">
    <!-- Card 1: Google Maps -->
    <div
        class="rounded-2xl border-2 border-green-600 shadow-lg overflow-hidden h-80"
    >
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3953.0404838673044!2d113.16372970968719!3d-7.785532677221836!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zN8KwNDcnMDcuOSJTIDExM8KwMDknNTguNyJF!5e0!3m2!1sid!2sid!4v1758163991885!5m2!1sid!2sid"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
        >
        </iframe>
    </div>

    <!-- Card 2: Gambar + Teks -->
    <div
        class="flex flex-col justify-center rounded-2xl shadow-lg p-6 bg-white bg-cover"
        style={`background-image:url(${textile.src})`}
    >
        <h2 class="text-xl font-bold mb-2">📍 Lokasi Kami</h2>
        <p class="mb-4 text-gray-700">
            Jl. Raya Sukapura No. 722 desa Laweyan Krajan <br />
            Kec. Sumberasih Kab.Probolinggo <br />
            Probolinggo, Jawa Timur 67251
        </p>

        <h3 class="font-semibold">Jam Operasional</h3>
        <ul class="mb-4 text-gray-700">
            <li>Senin - Jumat: 08.00 – 17.00</li>
            <li>Sabtu - Minggu: 09.00 – 17.00</li>
        </ul>

        <a
            href="https://maps.app.goo.gl/DWfn7VfScw7rNrzK6"
            target="_blank"
            rel="noopener noreferrer"
            class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition w-60"
        >
            🚗 Buka di Google Maps
        </a>
    </div>
</section>
