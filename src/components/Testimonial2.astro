---
import { TestimonialCar } from "../components/TestimonialCar";
import susu from "../assets/MilkOwn.jpg";

interface Testimonial {
    text: string;
    author: string;
}

const testimonials: Testimonial[] = [
    {
        text: "Organic fresh foods are typically categorized into produce (fruits and vegetables), meat, and dairy. These categories represent food items grown without synthetic chemicals.",
        author: "John Doe",
    },
    {
        text: "Our organic meats, such as beef, chicken, and pork, are raised on farms that adhere to organic standards, meaning the animals are treated humanely.",
        author: "Jane Smith",
    },
    {
        text: "We ensure that our organic farms maintain balance between sustainability and animal welfare for better food quality.",
        author: "Michael Green",
    },
    {
        text: "Choosing organic dairy products means supporting farming practices that prioritize animal health and environmental sustainability.",
        author: "Emily White",
    },
    {
        text: "By opting for organic foods, consumers contribute to a healthier planet and promote better farming practices worldwide.",
        author: "David Brown",
    },
];
---

<section
    class="relative bg-[#1f1f1f] py-20 overflow-hidden mb-20 bg-fixed bg-center bg-cover bg-no-repeat"
    style={`background-image: url(${susu.src});`}
>
    <!-- Overlay (gelap agar teks lebih terbaca) -->
    <div class="absolute inset-0 bg-black/60"></div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto text-center px-4">
        <p class="text-green-500 uppercase font-semibold tracking-wider mb-2">
            Our Testimonial
        </p>
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
            Review Client Our Project
        </h2>
        <p class="text-gray-300 mb-12">
            Organic meats, such as beef, chicken, and pork, are raised on farms
            that adhere to organic standards, meaning the animals
        </p>

        <!-- Carousel -->
        <TestimonialCar client:load TestimonialCar={testimonials} />
    </div>
</section>
